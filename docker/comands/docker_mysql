-- comando para subir cluster docker compartilhado com microservico
docker-compose -f docker-compose.kafka.yml up -d
docker network create kafka-network

-- iniciar containers
cd docker
docker-compose up -d

-- entrar no container
docker exec -it my-mysql-core-english-school bash
mysql -u root -p
root
use core_english_school;
show tables;

-- matar containers
docker stop my-mysql-core-english-school
docker rm my-mysql-core-english-school

docker stop kafka
docker rm kafka

docker stop zookeeper
docker rm zookeeper

docker stop schema-registry
docker rm schema-registry

docker stop my-mysql-progress-tracker
docker rm my-mysql-progress-tracker

docker stop $(docker ps -q) && docker rm $(docker ps -aq)
